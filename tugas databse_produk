CREATE DATABASE toko;

USE toko;

CREATE TABLE produk (
    id INT(11) AUTO_INCREMENT PRIMARY KEY,
    nama VARCHAR(100) NOT NULL,
    harga INT(11) NOT NULL,
    deskripsi TEXT NOT NULL
);

<!-- simpan file ini sebagai form_produk.php -->
<form action="proses_produk.php" method="post">
    <label>Nama Produk:</label><br>
    <input type="text" name="nama"><br><br>

    <label>Harga Produk:</label><br>
    <input type="number" name="harga"><br><br>

    <label>Deskripsi Produk:</label><br>
    <textarea name="deskripsi"></textarea><br><br>

    <input type="submit" value="Tambah Produk">
</form>


<?php
// simpan file ini sebagai proses_produk.php

// Koneksi database (ubah sesuai konfigurasi kamu)
$host = "localhost";
$user = "root";
$pass = "";
$db   = "toko";
$conn = mysqli_connect($host, $user, $pass, $db);

// Cek koneksi
if (!$conn) {
    die("Koneksi gagal: " . mysqli_connect_error());
}

// Ambil data dari form
$nama = $_POST['nama'];
$harga = $_POST['harga'];
$deskripsi = $_POST['deskripsi'];

// Validasi sederhana
if (empty($nama) || empty($harga) || empty($deskripsi)) {
    echo "Semua data harus diisi!";
} else {
    // Query insert ke database
    $sql = "INSERT INTO produk (nama, harga, deskripsi) VALUES ('$nama', '$harga', '$deskripsi')";

    if (mysqli_query($conn, $sql)) {
        echo "Produk berhasil ditambahkan!";
    } else {
        echo "Error: " . mysqli_error($conn);
    }
}

mysqli_close($conn);
?>
